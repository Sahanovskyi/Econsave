<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <color android:color="@color/green_dark"></color>
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="0dip" android:color="@color/white" />
            <gradient android:angle="-90" android:startColor="@color/white"
                android:endColor="@color/white"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="0dip" android:color="#971E05" />
            <solid android:color="#58857e"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="0dip" android:color="@color/bright_grey" />
            <gradient android:angle="-90" android:startColor="@color/white"
                android:endColor="@color/button_green" />
        </shape>
    </item>
</selector>

